<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="actionMenuTextColor">@color/white</item> <!--  menu中字体颜色-->
        <item name="android:textSize">18sp</item> <!--  字体大小-->
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
        <!-- 主要是这个起作用,修改默认返回键的颜色-->
        <!--<item name="colorControlNormal">@android:color/white</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btn_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_btn</item>
    </style>

    <style name="user_info_tv_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
</resources>
